---
import { colors } from "@core/colors";

const { question } = Astro.props;

const backgroundColor = colors.primary + "06";
---

<div class="card rounded-3 shadow p-4">
  <h3 class="fs-5 fw-bold">{question}</h3>
  <p class="fs-6 mb-0">
    <slot />
  </p>
</div>

<style define:vars={{ backgroundColor }}>
  .card {
    background-color: var(--backgroundColor);
  }
</style>
