---
import { pages } from "@core/pages";
---

<section id="hero" class="px-0 px-md-5">
  <div class="px-0 px-lg-5">
    <div class="background rounded-5">
      <div class="overlay rounded-5">
        <div class="overlay rounded-5">
          <div class="section">
            <div class="container">
              <div
                class="hero-content d-flex flex-column flex-grow-1 mx-auto py-5"
              >
                <h1 class="mb-4 text-light text-center">
                  Life & Travel Insurance
                </h1>
                <p class="fs-4 lh-lg text-light text-center mb-5">
                  Wholesalers Advantage offers a wide range of flexible and
                  affordable life and travel insurance products perfect for any
                  business or individual.
                </p>
                <div class="mx-auto">
                  <a
                    class="btn btn-primary btn-lg rounded-pill fs-3 fw-bold text-white py-2 px-4"
                    href={pages.memberForm.path}
                  >
                    <span class="px-4">Become a Member</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .background {
    background-image: url(/images/life.png);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .overlay {
    background-color: rgba(0, 0, 0, 0.65);
  }

  .section {
    padding: 12rem 0;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-content h1 {
    font-size: 3.5rem;
  }

  .card {
    max-width: 80%;
  }

  @media screen and (max-width: 991px) {
    .background,
    .overlay {
      border-radius: 0 !important;
    }

    .card {
      max-width: 100%;
    }
  }

  @media screen and (max-width: 575px) {
    .card {
      border-radius: 0 !important;
    }
  }
</style>
