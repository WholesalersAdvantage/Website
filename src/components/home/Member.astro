<style>
  #membership {
    background-color: #edf4f8;
    padding-top: 8rem;
    padding-bottom: 10rem;
  }

  .subtitle {
    max-width: 600px;
    margin-inline: auto;
  }

  .card {
    padding: 4rem 5rem;
  }

  .background {
    background-color: #053952;
  }

  .title {
    max-width: 500px;
  }

  .testimonial {
    max-width: 800px;
  }
</style>
