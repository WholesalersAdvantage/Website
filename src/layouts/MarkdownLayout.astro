---
import MainLayout from "./MainLayout.astro";

const { frontmatter } = Astro.props;
---

<MainLayout
  navbarBackgroundColor="transparent"
  title={frontmatter.title}
  description={frontmatter.description}
>
  <section class="section">
    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="text">
          <slot />
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style is:global>
  .text {
    max-width: 800px;
  }

  .text h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .text h2 {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .text h3 {
    font-size: 1.35rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .text p {
    font-size: 1rem;
    line-height: 1.9;
    margin-bottom: 0.5rem;
  }

  .text li {
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }
</style>
